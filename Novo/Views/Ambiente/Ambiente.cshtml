@{
    ViewData["Title"] = "Reservas";
}
@model List<Novo.Models.Domain.Ambiente>

<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Descricao</h3>
            </th>
            <th>
                <h3>Status</h3>
            </th>
            <th>
                <h3>Items</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ambiente in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ambiente.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ambiente.Status)
                </td>
                <td>
                    @foreach (var acento in ambiente.Items)
                    {
                        @Html.DisplayFor(model => acento.Descricao)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ambiente.IdAmbiente">Edit</a> |
                    <a asp-action="Details" asp-route-id="@ambiente.IdAmbiente">Details</a> |
                    <a asp-action="Delete" asp-route-id="@ambiente.IdAmbiente">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

