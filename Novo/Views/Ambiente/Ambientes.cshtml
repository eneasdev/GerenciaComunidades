@model List<Novo.Models.Domain.Ambiente>

<div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Ambiente" asp-action="CriarAmbiente"><button>Novo ambiente</button></a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <h3>Registro</h3>
            </th>
            <th>
                <h3>Descricao</h3>
            </th>
            <th>
                <h3>Status</h3>
            </th>
            <th>
                <h3>Items</h3>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ambiente in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => ambiente.IdAmbiente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ambiente.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => ambiente.Status)
                </td>
                <td>
                    @foreach (var acento in ambiente.Items)
                    {
                        @Html.DisplayFor(model => acento.Descricao)
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "AtualizarAmbiente", new { id = ambiente.IdAmbiente })
                </td>
                <td>
                    <form action="DesativarAmbiente" method="post">
                        <input type="hidden" name="id" value="@ambiente.IdAmbiente" />
                        <input type="submit" value="Desativar" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>@TempData["Message"]</h2>