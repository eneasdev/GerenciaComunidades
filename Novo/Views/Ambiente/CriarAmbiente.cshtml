@using Novo.Models.AmbienteModels
@{
    ViewData["Title"] = "Ambientes";
}
@model CriarAmbienteViewModel

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CriarAmbiente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input type="text" asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdItems" class="control-label">Quantidade de items</label>
                <input type="number" asp-for="QtdItems" class="form-control" />
                <span asp-validation-for="QtdItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-default btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<h2>@ViewData["Message"]</h2>