@model Novo.Models.Domain.Usuario

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="UsuarioLogin">
            <h2>Entrar na sua conta</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label" ></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default btn-primary" style="width: 200px"/>
            </div>
            <table>
                @*<td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Esqueceu sua senha?</a>
                </td>*@
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Cadastre-se</a>
                </td>
            </table>
            <h2>@ViewData["Message"]</h2>
        </form>
    </div>
</div>
<br />
